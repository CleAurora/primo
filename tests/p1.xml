<?xml version="1.0"?>
<Primo>
 <GlobalListeners>
  <EventLogger/>
  <OnEvent event="after_attach" action="{process.Start()}"/>
 </GlobalListeners>
 
 <Process path="c:\windows" bin="notepad.exe">
  <OnEvent event="after_finish" action="{process.Start()}"/>
  <KillOnDetach/>
 </Process>
 
 <Process path="c:\windows" bin="regedit.exe">
  <OnSpecificTime time="16:15:50" action="{process.Kill()}"/>
  <OnSpecificTime time="16:15:55" action="{process.Start()}"/>
  <OnSpecificTime time="16:15:56" action="{process.Kill()}"/>
 </Process>
 
</Primo>