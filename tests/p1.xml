<?xml version="1.0"?>
<Primo>
 <GlobalListeners>
  <EventLogger/>
  <OnEvent event="after_attach" action="{process.Start()}"/>
 </GlobalListeners>
 
 <Process path="c:\windows" bin="notepad.exe">
  <EachXSeconds interval="0.5" action="{process.Start() if not process.running else process.Kill()}"/>
  <KillOnDetach/>
 </Process>
 
 <Process path="c:\windows" bin="regedit.exe">
  <OnSpecificTime time="15:34:30" action="{process.Kill()}"/>
  <OnSpecificTime time="15:34:35" action="{process.Start()}"/>
  <OnSpecificTime time="15:34:36" action="{process.Kill()}"/>
 </Process>
 
</Primo>